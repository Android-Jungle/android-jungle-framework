<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Jungle.Style.SimpleDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="Jungle.Style.ActionSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/actionsheet_bkg</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="Jungle.Style.ActionSheet.Anim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">
            @anim/action_sheet_enter_animation
        </item>
        <item name="android:windowExitAnimation">
            @anim/action_sheet_exit_animation
        </item>
    </style>

    <style name="SwitchStyleToggle" parent="android:Widget">
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <color name="actionsheet_bkg">#eee</color>
</resources>
